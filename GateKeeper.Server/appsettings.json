{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Formatting.Compact" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithEnvironmentName", "WithProcessName" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {EnvironmentName}/{ProcessName} {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "EnableHashing": false
  },
  "AllowedHosts": "*",
  "PasswordSettings": {
    "MaxFailedAccessAttempts": 5,
    "RequiredLength": 10,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true
  },
  "LoginSettings": {
    "MaxFailedAccessAttempts": 5,
    "CookieExpiryMinutes": 30,
    "LockoutEnabled": true
  },
  "RegisterSettings": {
    "RequireInvite": true,
    "UserCanSendInvites": true,
    "UserInviteCount": 10
  },
  "VerificationToken": {
    "DefaultExpiresIn": 1080,
    "Overrides": [
      {
        "TokenType": "Invite",
        "ExpiresIn": 43200
      }
    ]
  }
}

