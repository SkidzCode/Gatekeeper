/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts"
    // "src/plugins.d.ts" // No longer needed here if include is broader
  ],
  "include": [
    "src/**/*.ts", // Broaden to include all .ts files in src
    "../GateKeeper.Plugin.Profile/Frontend/portal/plugins/**/*.ts", // Include TypeScript files from Profile plugin portal section
    "../GateKeeper.Plugin.Sample/Frontend/portal/plugins/**/*.ts", // Include TypeScript files from Sample plugin portal section
    "../GateKeeper.Plugin.Profile/Frontend/admin/profile-admin/**/*.ts",
    "../GateKeeper.Plugin.Sample/Frontend/admin/sample-admin/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
